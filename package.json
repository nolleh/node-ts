{
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node ./src/app.ts",
    "test": "jest --detectOpenHandles --forceExit"
  },
  "devDependencies": {
    "@types/config": "^0.0.39",
    "@types/jest": "^27.0.2",
    "jest": "^27.3.1",
    "nodemon": "^2.0.14",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  },
  "dependencies": {
    "config": "^3.3.6"
  }
}
